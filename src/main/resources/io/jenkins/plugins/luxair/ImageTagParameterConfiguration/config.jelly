<?xml version="1.0" encoding="UTF-8"?>
<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:f="/lib/form" xmlns:c="/lib/credentials">
    <f:section title="${%Image Tag Parameter Plugin}">
        <f:entry title="${%Default Registry}" field="defaultRegistry">
            <f:textbox />
        </f:entry>

        <f:entry title="${%Default Registry Credential}" field="defaultCredentialId">
            <c:select />
        </f:entry>

        <f:entry title="${%Default Tag Ordering}" field="defaultTagOrdering">
            <f:enum>${it}</f:enum>
        </f:entry>

        <f:entry title="${%Default Verify SSL}" field="defaultVerifySsl">
            <f:checkbox>${it}</f:checkbox>
        </f:entry>
    </f:section>
</j:jelly>